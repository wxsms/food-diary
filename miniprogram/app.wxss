@import './miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

page {
  background-color: #ebebeb;
  font-size: 16px;
  color: #333;
}

@media (prefers-color-scheme: dark) {
  page {
    background-color: #191919;
  }
}

.container {
  min-height: 100vh;
  background-color: #ebebeb;
}

.container[data-weui-theme=dark] {
  background-color: #191919;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__title {
  color: var(--weui-FG-0);
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: var(--weui-FG-1);
  text-align: left;
  font-size: 14px;
}

.weui-cell_example:before {
  left: 52px;
}

.weui-textarea, .weui-input, .weui-label {
  color: var(--weui-FG-0)
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.weui-icon {
  display: block !important;
}