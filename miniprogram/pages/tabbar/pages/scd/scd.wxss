page, .container {
  height: 100%;
}

.container {
  background-color: var(--weui-BG) !important;
  display: flex;
  flex-direction: column;
  --SCD-FOODS-GREY: #ebebeb;
  --SCD-FOODS-GREY-2: #cccccc;
}

.container[data-weui-theme=dark] {
  --SCD-FOODS-GREY: #191919;
  --SCD-FOODS-GREY-2: #555555;
}

.vtabs {
  flex: 1;
  overflow: hidden;
}

.weui-vtabs-bar__content {
  background-color: var(--SCD-FOODS-GREY);
}

.weui-vtabs-content {
  padding: 17px 0;
}

.weui-vtabs-content__item {
  padding: 0 0 20px;
}

.row-title {
  padding: 0 20px;
  margin: 0 0 5px 0;
}

.row {
  padding: 5px 20px;
  font-size: 0.9rem;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid var(--weui-BG-1);
}

.row-first {
  border-top: 1px solid var(--weui-BG-1);
}

.row-hover {
  background-color: var(--weui-BG-1);
}

.food-name {
  flex: 1
}

.food-status {
  width: 10px;
  height: 10px;
  margin-left: 10px;
  border-radius: 50%;
}

.food-status-ok {
  background-color: var(--weui-BRAND);
}

.food-status-not-ok {
  background-color: var(--weui-RED);
}

.food-status-pending {
  background-color: var(--SCD-FOODS-GREY-2);
}

.row-bottom-placeholder {
  height: 100px;
}

.desc-options-scroll-view {
  height: 200px;
}

.modal-btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.weui-cell-noborder:before {
  border-color: transparent !important;
}