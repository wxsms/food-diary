[data-weui-theme=light], page {
  --CALENDAR-COL-EMPTY: #eeeeee;
}

[data-weui-theme=dark] {
  --CALENDAR-COL-EMPTY: #2f2f2f;
}

.container {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 343px;
}

.calendar {
  width: 100%;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.cell {
  margin: 2px;
  width: 45px;
  height: 70px;
}

.cell-box {
  width: 100%;
  height: 100%;
  background-color: var(--weui-BG-2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.cell-placeholder {
  width: 100%;
  height: 100%;
  background-color: transparent;
}

.cell-title {
  height: 1.1rem;
  line-height: 1.1rem;
  text-align: center;
  font-size: 0.8rem;
  color: #fff;
  background-color: rgba(136, 136, 136, 0.5);
  width: 100%;
}

.cell-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 15px;
  width: 30px;
  margin: 1px;
}

.cell-row-sm {
  height: 3px;
  width: 23px;
  margin: 0 0 2px;
}

.cell-row-empty {
  background-color: var(--CALENDAR-COL-EMPTY);
}

.cell-row-filled {
  background-color: #ccccff;
}

.cell-row-danger {
  background-color: #ff6666;
}

.cell-col {
  width: 10px;
  height: 20px;
  margin: 1px;
}

.cell-col-empty {
  background-color: var(--CALENDAR-COL-EMPTY);
}

.cell-col-filled {
  background-color: #ffcc99;
}

.btns {
  margin-top: 20px;
  margin-bottom: 50px;
}

