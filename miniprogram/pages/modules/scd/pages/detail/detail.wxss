.rich-text-view {
  padding: 0 16px;
  --IMG-BOX-SHADOW-COLOR: rgba(0, 0, 0, 0.4);
}

.container[data-weui-theme=dark] .rich-text-view {
  --IMG-BOX-SHADOW-COLOR: transparent;
}

.rich-text-view rich-text {
  border-radius: 10px;
  text-align: center;
  line-height: 25px;
  font-size: 14px;
}

.rich-text-view rich-text .rich-text-img {
  border-radius: 10px;
  margin-top: 10px;
  max-width: 200px;
  box-shadow: 0 0 5px 1px var(--IMG-BOX-SHADOW-COLOR);
}

.level {
  font-size: 16px;
  display: block;
  text-align: center;
  margin-bottom: 10px;
}

.my-status {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.food-status {
  width: 10px;
  height: 10px;
  margin-right: 10px;
  border-radius: 50%;
}

.food-status-ok {
  background-color: var(--weui-BRAND);
}

.food-status-not-ok {
  background-color: var(--weui-RED);
}

.food-status-pending {
  background-color: var(--SCD-FOODS-GREY-2);
}