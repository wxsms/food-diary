.view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.food-status {
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.food-status-ok {
  background-color: var(--weui-BRAND);
}

.food-status-not-ok {
  background-color: var(--weui-RED);
}

.food-status-pending {
  background-color: #cccccc;
}

@media (prefers-color-scheme: dark) {
  .food-status-pending {
    background-color: #555555;
  }
}

.food-status-text {
  margin-left: 10px;
}

.food-status-text-no-margin {
  margin-left: 0;
}