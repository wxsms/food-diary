<mp-navigation-bar
  loading="{{loading}}"
  color="{{themeColors.navigationBarTextStyle}}"
  background="{{themeColors.navigationBarBackgroundColor}}"
  title="IBD日记"
  back="{{false}}"
>
  <view slot="left">
    <mp-icon
      icon="pencil"
      color="{{themeColors.navigationBarTextStyle}}"
      size="{{20}}"
    />
  </view>
</mp-navigation-bar>
<view class="container" data-weui-theme="{{theme}}">
  <date-nav bind:change="fetchData"/>
  <view class="cards">
    <card
      wx:for="{{options}}"
      wx:key="key"
      type="{{item}}"
      bind:card-tap="goEdit"
    />
  </view>
  <view class="btns">
    <button bindtap="showAddSheet" class="weui-btn" type="primary">添加...</button>
    <button
      bindtap="copyYesterday"
      wx:if="{{yesterdayData && !todayRecord}}"
      class="weui-btn"
      type="default"
    >
      同前
    </button>
    <button bindtap="goCalendar" class="weui-btn" type="default">日历</button>
  </view>
  <mp-actionSheet
    bindactiontap="goEdit"
    show="{{showActionSheet}}"
    actions="{{options}}"
  />
</view>
