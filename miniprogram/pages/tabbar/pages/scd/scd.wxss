page, .container {
  height: 100%;
}

.container {
  background-color: var(--weui-BG) !important;
  display: flex;
  flex-direction: column;
  --SCD-FOODS-GREY: #ebebeb;
}

.container[data-weui-theme=dark] {
  --SCD-FOODS-GREY: #191919;
}

.vtabs {
  flex: 1;
  overflow: hidden;
}

.weui-vtabs-bar__content {
  background-color: var(--SCD-FOODS-GREY);
}

.weui-vtabs-content {
  padding: 17px 0;
}

.weui-vtabs-content__item {
  padding: 0 0 20px;
}

.row-title {
  padding: 0 20px;
  margin: 0 0 5px 0;
}

.row {
  padding: 5px 20px;
  font-size: 0.9rem;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid var(--weui-BG-1);
}

.row-first {
  border-top: 1px solid var(--weui-BG-1);
}

.row-hover {
  background-color: var(--weui-BG-1);
}

.food-name {
  flex: 1;
  margin-right: 10px;
}

.row-bottom-placeholder {
  height: 100px;
}
